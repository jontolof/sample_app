<h1>Sign in</h1>

<%= form_for(:session, :url => sessions_path ) do |form| %>
	<div class="field">
		<%= form.label :email %><br />
		<%= form.text_field :email %>
	</div>
	<div class="field">
		<%= form.label :password %><br />
		<%= form.password_field :password %>
	</div>
	<div class="actions">
		<%= form.submit "Sign in" %>
	</div>
<% end %>

<p>New user? <%= link_to "Sign up now!", signup_path %>